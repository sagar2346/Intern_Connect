<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/internconnect">
    <!-- Disable session persistence across Tomcat restarts -->
    <Manager pathname="" />
    
    <!-- Configure a JDBC DataSource for your database -->
    <Resource name="jdbc/internconnect" 
              auth="Container" 
              type="javax.sql.DataSource"
              maxTotal="100" 
              maxIdle="30" 
              maxWaitMillis="10000"
              username="root" 
              password="" 
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/internconnect?useSSL=false&amp;allowPublicKeyRetrieval=true&amp;serverTimezone=UTC"/>
</Context>
